            geneDir=${geneDir:0:4} ##BASH IS BASE 1
            sndLocal=1
            pythonBEDScanner "$geneDir" "$sndLocal" & ##EXPANDS BED FILE WINDOWS AND CHECKS FOR OVER LAP
        done
