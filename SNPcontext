    # local targetVCF="${1%.*}"
    # targetVCF="${targetVCF##*/}"
    # vcf2bed < "${1}" > "${projectDic["tempOut"]}""${2}""${3}".bed & ##sort later
    vcf2bed < "${1}" > ${2} ##sort later
}

